<div id="popup" class="white-popup mfp-with-anim mfp-hide clearfix">

    {{ form_start(feedbackForm, {'attr': {'id': 'modal-form', 'class': 'popup-form'}, 'action': path('feedback'), 'method': 'POST'}) }}
        <h2>свяжитесь с нами</h2>

        {{ form_widget(feedbackForm.userName, {'attr': {'class': 'name', 'placeholder': 'Ваше Ім’я'}}) }}
        {{ form_help(feedbackForm.userName) }}
