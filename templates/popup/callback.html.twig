        {{ form_widget(feedbackForm.userSurname, {'attr': {'class': 'surname', 'placeholder': 'Ваше Прізвище'}}) }}
        {{ form_help(feedbackForm.userSurname) }}
        {{ form_errors(feedbackForm.userSurname) }}

        {{ form_widget(feedbackForm.userPhone, {'attr': {'class': 'phone', 'placeholder': 'Номер телефону'}}) }}
        {{ form_help(feedbackForm.userPhone) }}
        {{ form_errors(feedbackForm.userPhone) }}

        {{ form_widget(feedbackForm.subject, {'attr': {'class': 'subject', 'placeholder': 'Тема'}}) }}
        {{ form_help(feedbackForm.userPhone) }}
